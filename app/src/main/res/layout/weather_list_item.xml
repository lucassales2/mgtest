<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/item_horizontal_margin"
    android:layout_marginStart="@dimen/item_horizontal_margin"
    android:layout_marginRight="@dimen/item_horizontal_margin"
    android:layout_marginEnd="@dimen/item_horizontal_margin"
    android:layout_marginTop="@dimen/item_vertical_margin"
    android:layout_marginBottom="@dimen/item_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_cityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_large"
            android:layout_marginBottom="@dimen/item_horizontal_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/item_horizontal_margin">

            <ImageView
                android:id="@+id/img_weather_icon"
                android:layout_width="@dimen/item_image_size"
                android:layout_height="@dimen/item_image_size"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/item_horizontal_margin"
                android:layout_marginEnd="@dimen/item_horizontal_margin"/>

            <TextView
                android:id="@+id/text_weather_desc"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_horizontal_margin"
                android:textSize="@dimen/textsize_normal"
                android:layout_marginEnd="@dimen/item_horizontal_margin"/>

            <TextView
                android:id="@+id/text_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right|end"
                android:textStyle="bold"
                android:textSize="@dimen/textsize_large"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/text_temp_max_min"
            android:layout_width="match_parent"
            android:textSize="@dimen/textsize_normal"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>
